<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangale_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        fontPath="fonts/WorkSans-Bold.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/textview_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:gravity="center"
        fontPath="fonts/WorkSans-Medium.ttf"
        tools:ignore="MissingPrefix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_with_radius"
            android:textColor="@android:color/white"
            android:text="OK"/>

        <Button
            android:id="@+id/button_gotosenha"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_button_transparent"
            android:textColor="@color/colorPrimary"
            android:text=""/>

    </LinearLayout>


</LinearLayout>