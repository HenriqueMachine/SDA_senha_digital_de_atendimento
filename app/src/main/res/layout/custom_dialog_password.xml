<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangale_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        fontPath="fonts/WorkSans-Bold.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/textview_sua_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_gravity="center_horizontal"
        android:text="Sua senha é"
        android:gravity="center"
        android:textSize="18sp"
        fontPath="fonts/WorkSans-Bold.ttf"
        tools:ignore="MissingPrefix"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen16"
        android:padding="@dimen/dimen8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_describe_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:text="Senha"
                android:textSize="18sp"
                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/textview_describe_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:text="Categoria"
                android:textSize="18sp"
                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>

            <TextView
                android:id="@+id/textview_describe_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:text="Horário"
                android:textSize="18sp"
                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dimen8"

                android:gravity="center"
                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>
            <TextView
                android:id="@+id/textview_desc_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen8"

                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>
            <TextView
                android:id="@+id/textview_desc_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center"
                fontPath="fonts/WorkSans-Medium.ttf"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_with_radius"
            android:textColor="@android:color/white"
            android:text="OK"/>

        <Button
            android:id="@+id/button_gotosenha"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:background="@drawable/shape_button_transparent"
            android:textColor="@color/colorPrimary"
            android:text="ir para senha"/>

    </LinearLayout>


</LinearLayout>